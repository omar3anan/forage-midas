<configuration>
    <!-- Console appender to display logs in the console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration to show logs from all classes -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- You can specify log level for individual packages or classes -->
    <logger name="com.jpmc.midascore" level="INFO"/>
</configuration>
